{
  "manifest_version": 2,
  "name": "Waste no time",
  "version": "1.0.0",
  "description": "An extension that helps you waste less time.",
  "homepage_url": "https://github.com/rokpv/waste-no-time",
  "icons": {
    "48": "icons/time-48.png",
    "96": "icons/time-96.png"
  },
  "options_page": "html/settings.html",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/time-48.png",
    "default_title": "Waste no time",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "js/settings-manager.js",
      "js/time-manager.js",
      "js/waste-no-time.js"
    ]
  }
}